{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "react-native-scrollable-navigation-bar": ["./src/index"],
      "components/*": ["./example/src/components/*"],
      "library/*": ["./example/src/library/*"],
      "resources/*": ["./example/src/resources/*"],
      "navigation/*": ["./example/src/navigation/*"],
      "screens/*": ["./example/src/screens/*"],
      "test-utils": ["./example/jest/test-utils.tsx"]
    },
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "esModuleInterop": true,
    //"importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noStrictGenericChecks": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["docs"]
}
